# URL base do Plausible
BASE_URL=https://analytics.mariomelo.com

# Gerar com: openssl rand -base64 64 | tr -d '\n'
SECRET_KEY_BASE=CHANGE_ME_64_CHAR_SECRET

# Gerar com: openssl rand -base64 32 | tr -d '\n'
TOTP_VAULT_KEY=CHANGE_ME_32_CHAR_SECRET

# === SETUP PADRÃO (Postgres próprio) ===
# Descomente se NÃO estiver usando docker-compose.override.yml
# POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD

# === SETUP COM OVERRIDE (Postgres compartilhado) ===
# Descomente se estiver usando docker-compose.override.yml
SHARED_DB_NAME=plausible
SHARED_DB_USER=plausible_user
SHARED_DB_PASSWORD=CHANGE_ME_PLAUSIBLE_PASSWORD

# Desabilitar registro de novos usuários
DISABLE_REGISTRATION=true
